datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}
model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  bookings Booking[]
}
model Booking {
id String @id @default(uuid())
 apartment String // "golden" | "racing"
  startDate DateTime
  endDate DateTime
  adults Int
   children Int?
   message String?
   referral String?
   createdAt DateTime @default(now())
   userId Int
   user User @relation(fields: [userId], references: [id])
    }

